<link rel="stylesheet" href="/css/style.css">
<h2>All Doctors</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each doctors}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>
        <!-- Form for deleting a doctor -->
            <form action="/doctors/delete/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
       </td>
      </tr>
    {{/each}}
  </tbody>
   
</table>
<!-- Back to Home Button -->
<button onclick="goHome()" class="btn btn-back">Back to Home</button>

<script>
  // Function to redirect to the home page
  function goHome() {
    window.location.href = '/';
  }
</script>

